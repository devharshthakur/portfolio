{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"app/**/*.{js,jsx,ts,tsx}",
			"components/**/*.{js,jsx,ts,tsx}",
			"data/**/*.{js,jsx,ts,tsx}",
			"hooks/**/*.{js,jsx,ts,tsx}",
			"lib/**/*.{js,jsx,ts,tsx}",
			"*.{js,jsx,ts,tsx,json}",
			"*.config.{js,jsx,ts,tsx,mjs}",
			"**/*.md"
		],
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"lineEnding": "lf",
		"indentWidth": 2
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "always"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	}
}
